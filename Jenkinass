pipeline {
    agent any
    environment {
        DIRECTORY_PATH = "C:/Users/Jenkins/Jenkinass"
        TESTING_ENVIRONMENT = "testing-environment"
        PRODUCTION_ENVIRONMENT = "Beatrice"
    }
    stages {
        stage('Build') {
            steps {
                echo "Build code using build automation tool like Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo "Run unit tests and integration tests"
                    echo "using appropriate test automation tools"
                }
            }
            post {
                success {
                    mail to: "beaty.cheru33@gmail.com",
                    subject: "Test Status Email",
                    body: "Test was successful!"
                }
                failure {
                    // Send failure notification email
                    emailext (
                        subject: "Unit and Integration Tests Failed",
                        body: "Unit and integration tests have failed. Please find the attached logs.",
                        to: "beaty.cheru33@gmail.com",
                        attachmentsPattern: "${env.JOB_NAME}/builds/${env.BUILD_NUMBER}/console.log"
                    )
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo "Integrate a code analysis tool to analyze your code (e.g., SonarQube)"
            }
        }
        stage('Security Scan') {
            steps {
                echo "Perform a security scan on the code using a security scanning tool"
            }
            post {
                success {
                    // Send success notification email
                    emailext (
                        subject: "Security Scan Passed",
                        body: "Security scan has passed. Please find the attached logs.",
                        to: "beaty.cheru33@gmail.com",
                        attachmentsPattern: "${env.JOB_NAME}/builds/${env.BUILD_NUMBER}/console.log"
                    )
                }
                failure {
                    // Send failure notification email
                    emailext (
                        subject: "Security Scan Failed",
                        body: "Security scan has failed. Please find the attached logs.",
                        to: "beaty.cheru33@gmail.com",
                        attachmentsPattern: "${env.JOB_NAME}/builds/${env.BUILD_NUMBER}/console.log"
                    )
                }
            }
        }
        // Rest of the stages...
    }
}
