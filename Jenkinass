pipeline {
    agent any
    environment {
        DIRECTORY_PATH = "C:/Users/Jenkins/Jenkinass"
        TESTING_ENVIRONMENT = "testing-environment"
        PRODUCTION_ENVIRONMENT = "Beatrice"
    }
    stages {
        stage('Build') {
            steps {
                echo "Build code using build automation tool like Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo "Run unit tests and integration tests"
                    echo "using appropriate test automation tools"
                }
            }
            post {
                success {
                    script {
                        def logFiles = findFiles(glob: '**/*.log')
                        if (logFiles) {
                            mail body: "Unit and integration tests have passed. Please find the attached logs.",
                                subject: "Unit and Integration Tests Passed",
                                to: "beaty.cheru33@gmail.com",
                                attachments: logFiles.collect { file -> file.path }
                        } else {
                            mail body: "Unit and integration tests have passed.",
                                subject: "Unit and Integration Tests Passed",
                                to: "beaty.cheru33@gmail.com"
                        }
                    }
                }
                failure {
                    script {
                        def logFiles = findFiles(glob: '**/*.log')
                        if (logFiles) {
                            mail body: "Unit and integration tests failed. Please find the attached logs.",
                                subject: "Unit and Integration Test Failed",
                                to: "beaty.cheru33@gmail.com",
                                attachments: logFiles.collect { file -> file.path }
                        } else {
                            mail body: "Unit and integration tests failed.",
                                subject: "Unit and Integration Test Failed",
                                to: "beaty.cheru33@gmail.com"
                        }
                    }
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo "Integrate a code analysis tool to analyze your code (SonarQube)"
            }
        }
        stage('Security Scan') {
            steps {
                echo "Perform a security scan on the code using a security scanning tool"
            }
            post {
                success {
                    script {
                        def logFiles = findFiles(glob: '**/*.log')
                        if (logFiles) {
                            mail body: "Security scan has passed. Please find the attached logs.",
                                subject: "Security Scan Passed",
                                to: "beaty.cheru33@gmail.com",
                                attachments: logFiles.collect { file -> file.path }
                        } else {
                            mail body: "Security scan has passed.",
                                subject: "Security Scan Passed",
                                to: "beaty.cheru33@gmail.com"
                        }
                    }
                }
                failure {
                    script {
                        def logFiles = findFiles(glob: '**/*.log')
                        if (logFiles) {
                            mail body: "Security scan has failed. Please find the attached logs.",
                                subject: "Security Failed",
                                to: "beaty.cheru33@gmail.com",
                                attachments: logFiles.collect { file -> file.path }
                        } else {
                            mail body: "Security scan has failed.",
                                subject: "Security Failed",
                                to: "beaty.cheru33@gmail.com"
                        }
                    }
                }
            }
        }
       
